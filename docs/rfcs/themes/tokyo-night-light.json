{
  "version": "1.0",
  "id": "tokyo-night-light",
  "name": "Tokyo Night Light",
  "description": "A clean, light theme inspired by Tokyo's daytime aesthetic",
  "author": {
    "name": "enkia",
    "url": "https://github.com/enkia"
  },
  "variant": "light",
  "homepage": "https://github.com/enkia/tokyo-night-vscode-theme",
  "colors": {
    "background": {
      "primary": "#d5d6db",
      "secondary": "#cbccd1",
      "tertiary": "#b4b5b9"
    },
    "text": {
      "primary": "#343b58",
      "secondary": "#4c505e",
      "tertiary": "#9699a3"
    },
    "accent": {
